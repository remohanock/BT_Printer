<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#64C8FF"
        android:orientation="vertical">

        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="7dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/kadamba"
                            android:visibility="visible"
                            />


                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Kadamba Transport Corporation Limited"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp" />

                        <Button
                            android:id="@+id/btn_menu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_margin="8dp"
                            android:background="@drawable/ic_menu_black_24dp"
                            android:clickable="true"
                            android:elevation="12dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="end|center_vertical" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="Sample Travels"
                    android:textColor="#008EFF"
                    android:textSize="26dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/ic_my_location_black_24dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/btn_from_prev"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_play_circle_filled_black_24dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:rotation="180"
                                android:text=""
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_from"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="25dp" />

                            <Button
                                android:id="@+id/btn_from_next"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_play_circle_filled_black_24dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text=""
                                android:textSize="30dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="TO" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/ic_place_black_24dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_to_prev"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_play_circle_filled_black_24dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:rotation="180"
                                android:text=""
                                android:textSize="30dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_to"
                                android:layout_width="0dp"
                                android:layout_height="42dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="25dp" />

                            <Button
                                android:id="@+id/btn_to_next"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_play_circle_filled_black_24dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text=""
                                android:textSize="30dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.remo.material.bluetoothprinter.customclass.TicketView
                        android:id="@+id/ticketView"
                        android:layout_width="match_parent"
                        android:layout_height="390dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:dividerPadding="0dp"
                        app:dividerType="dash"
                        app:orientation="horizontal"
                        app:scallopPositionPercent="48"
                        app:scallopRadius="10dp"
                        app:showBorder="false"
                        app:showDivider="true"
                        app:ticketElevation="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">


                        <!--<android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="8dp"
                            app:cardCornerRadius="8dp">
                    -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Full" />

                                <Button
                                    android:id="@+id/btn_add_adult"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_add_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:text=""
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_adult_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="25dp" />

                                <Button
                                    android:id="@+id/btn_rem_adult"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_remove_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@android:color/darker_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Half" />

                                <Button
                                    android:id="@+id/btn_add_child"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_add_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_child_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="25dp" />

                                <Button
                                    android:id="@+id/btn_rem_child"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_remove_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@android:color/darker_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Pass" />

                                <Button
                                    android:id="@+id/btn_add_pass"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_add_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_pass_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="25dp" />

                                <Button
                                    android:id="@+id/btn_rem_pass"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_remove_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@android:color/darker_gray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Luggage" />

                                <Button
                                    android:id="@+id/btn_add_luggage"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_add_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:text=""
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_luggage_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="25dp" />

                                <Button
                                    android:id="@+id/btn_rem_luggage"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/ic_remove_circle_black_24dp"
                                    android:clickable="true"
                                    android:elevation="16dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>
                        <!--</android.support.v7.widget.CardView>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="Distance: 0 km(s)"
                                    app:layout_constraintBottom_toTopOf="@+id/tv_adult_fare"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tv_adult_fare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Full: 0 x 0"
                                    android:textSize="16dp"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_distance" />

                                <TextView
                                    android:id="@+id/tv_adult_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="= 0"
                                    android:textSize="16dp"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_distance" />

                                <TextView
                                    android:id="@+id/tv_child_fare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Half: 0 x 0"
                                    android:textSize="16dp"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_adult_fare" />

                                <TextView
                                    android:id="@+id/tv_child_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:gravity="end"
                                    android:text="= 0"
                                    android:textSize="16dp"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_adult_total" />


                                <TextView
                                    android:id="@+id/tv_pass_fare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Pass: 0 x 0"
                                    android:textSize="16dp"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_child_fare" />

                                <TextView
                                    android:id="@+id/tv_pass_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:gravity="end"
                                    android:text="= 0"
                                    android:textSize="16dp"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_child_total" />

                                <TextView
                                    android:id="@+id/tv_luggage_fare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:gravity="end"
                                    android:text="Luggage: "
                                    android:textSize="16dp"
                                    android:textStyle="italic|bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_pass_fare" />

                                <TextView
                                    android:id="@+id/tv_luggage_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginStart="8dp"
                                    android:gravity="end"
                                    android:text="= 0"
                                    android:textSize="16dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/guideline"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_pass_total" />

                                <android.support.constraint.Guideline
                                    android:id="@+id/guideline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.55" />

                                <android.support.constraint.Guideline
                                    android:id="@+id/guideline2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.85" />
                            </android.support.constraint.ConstraintLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Total Fare:"
                                android:textColor="@android:color/black" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:id="@+id/tv_total_fare"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="0.00"
                                    android:textColor="@android:color/black"
                                    android:textSize="50dp" />

                                <Button
                                    android:id="@+id/btn_reset"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="end|bottom"
                                    android:background="@drawable/ic_refresh_black_24dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:padding="20dp" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <Button
                    android:id="@+id/btn_print"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_button"
                    android:clickable="true"
                    android:elevation="17dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Print Ticket"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

            </LinearLayout>
<!--
        </ScrollView>
-->
    </LinearLayout>

    <include layout="@layout/bottom_sheet" />
</android.support.design.widget.CoordinatorLayout>